				</sdk:DataGridTemplateColumn>
				<sdk:DataGridTemplateColumn Header="РГЕ-1 Откл %" ClipboardContentBinding="{Binding RGE1DiffProc}">
					<sdk:DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding RGE1DiffProc, StringFormat='#,0.00'}" HorizontalAlignment="Right"/>
						</DataTemplate>
					</sdk:DataGridTemplateColumn.CellTemplate>
				</sdk:DataGridTemplateColumn>


