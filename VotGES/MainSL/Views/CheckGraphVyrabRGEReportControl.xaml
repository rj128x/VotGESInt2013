					<sdk:DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding RGE1Fakt, StringFormat='#,0.00'}" HorizontalAlignment="Right"/>
						</DataTemplate>
					</sdk:DataGridTemplateColumn.CellTemplate>
				</sdk:DataGridTemplateColumn>
				<sdk:DataGridTemplateColumn Header="РГЕ-1 План" ClipboardContentBinding="{Binding RGE1Plan}">
