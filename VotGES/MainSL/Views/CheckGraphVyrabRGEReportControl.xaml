				</sdk:DataGridTemplateColumn>
				<sdk:DataGridTemplateColumn Header="РГЕ-1 Откл" ClipboardContentBinding="{Binding RGE1Diff}">
					<sdk:DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding RGE1Diff, StringFormat='#,0.00'}" HorizontalAlignment="Right"/>
